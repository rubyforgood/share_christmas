<%= form_for [:vcadmin, @campaign] do |f| %>
  <%= label_tag :name %>
  <br>
  <%= f.text_field :name %>
  <br>
  <%= label_tag :description %>
  <br>
  <%= f.text_area :description, cols: 80, rows: 6 %>
  <br>
  <%= label_tag :logo %>
  <br>
  <% if @campaign.logo.exists? %>
    <%= image_tag @campaign.logo.url(:thumb) %>
    <br/>
  <% end %>
  <%= f.file_field :logo %>
  <br>
  <%= label_tag :donation_deadline %>
  <br>
  <%= f.date_select :donation_deadline %>
  <br>
  <%= label_tag :reminder_date %>
  <br>
  <%= f.date_select :reminder_date %>
  <br>
  <%= f.submit %>
<% end %>
